<androidx.cardview.widget.CardView
    android:id="@+id/card_vacunas"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/txv_vacuna"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Vacuna:"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txv_valor_vacuna"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/txv_vacuna"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txv_vacuna"
                app:layout_constraintTop_toTopOf="@+id/txv_vacuna" />

            <TextView
                android:id="@+id/txv_aplicacion"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="AplicaciÃ³n:"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txv_vacuna" />

            <TextView
                android:id="@+id/txv_valor_aplicacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/txv_aplicacion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txv_aplicacion"
                app:layout_constraintTop_toTopOf="@+id/txv_aplicacion" />

            <TextView
                android:id="@+id/txv_fecha"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txv_aplicacion" />

            <TextView
                android:id="@+id/txv_valor_fecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/txv_fecha"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txv_fecha"
                app:layout_constraintTop_toTopOf="@+id/txv_fecha" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>